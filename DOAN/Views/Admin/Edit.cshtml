@model DOAN.Models.SanPham

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Edit", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <strong class="text-uppercase text-danger">CHỈNH SỬA THÔNG TIN SẢN PHẨM</strong>
                </div>
            </div>
        </div>
        <div class="card-body p-3">
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <p style="font-weight: bold">Tên sản phẩm</p>
                        @Html.EditorFor(model => model.TenSanPham, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <p style="font-weight: bold">Chi tiết sản phẩm</p>
                        @Html.TextAreaFor(model => model.ChiTietSanPham, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ChiTietSanPham, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <p style="font-weight: bold">Số lượng sản phẩm</p>
                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <p style="font-weight: bold">Giá sản phẩm</p>
                        @Html.EditorFor(model => model.Gia_SanPham, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gia_SanPham, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <p style="font-weight: bold">Sản phẩm thuộc loại:</p>
                        <div class="alert alert-warning" style="background-color:whitesmoke; color:black">@Html.DisplayFor(modelItem => Model.LoaiSP.TenLoai)</div>                       
                    </div>
                    <div class="form-group">
                        <p style="font-weight: bold">Thương hiệu:</p>
                        <div class="alert alert-warning" style="background-color:whitesmoke; color:black">@Html.DisplayFor(modelItem => Model.ThuongHieu.TenThuongHieu)</div>
                    </div>
                    <div class="form-group">
                        <h6 style="font-weight:bold">Ảnh Sản Phẩm</h6>
                        <input type="file" name="fileUpload" />
                        <img src="@Url.Content("~/asset/new/"+ Model.Image)" width="75px" /> (Ảnh hiện tại)
                        @ViewBag.ThongBao
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value=" EDIT " class="btn btn-sm btn-success" /> <a href="@Url.Action("SanPham","Admin")" class="btn btn-sm btn-dark">BACK TO PRODUCT</a>

                </div>
            </div>
        </div>
    </div>
    
}


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model PagedList.PagedList<DOAN.Models.SanPham>
@using DOAN.Models;
@using PagedList.Mvc;


<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />


    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/fontawesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN"
          crossorigin="anonymous">
    <link href="~/asset/font/themify-icons/themify-icons.css" rel="stylesheet" />
    <link href="~/CSS/footer.css" rel="stylesheet" />
    <link href="~/CSS/css/style.css" rel="stylesheet" />
    <style>
        .MenuTrang li {
            display: inline;
            color: #000;
        }

        .thumbnail {
            text-decoration: none;
            height: 450px;
        }

        a {
            font-size: 15px;
        }

        .pt-5,
        .py-5 {
            padding-top: 1rem !important;
        }
    </style>
    @Html.Partial("Header")

</head>
<body>

    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h4 class="m-0">Danh Mục</h4>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 3;">
                    <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-toggle="dropdown">Linh Kiện <i class="fa fa-angle-down float-right mt-1"></i></a>
                            <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                <a href="" class="dropdown-item">Core</a>
                                <a href="" class="dropdown-item">Cart Màn Hình</a>
                                <a href="" class="dropdown-item">.....</a>
                            </div>
                        </div>
                        <a href="" class="nav-item nav-link">LapTop</a>
                        <a href="" class="nav-item nav-link">Màn Hình</a>
                        <a href="/Store/CPU" class="nav-item nav-link">CPU</a>
                        <a href="" class="nav-item nav-link">Chuột</a>
                        <a href="" class="nav-item nav-link">Bàn Phím</a>
                        <a href="" class="nav-item nav-link">Tai Nghe</a>
                        <a href="" class="nav-item nav-link">WebCam</a>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                                <a href="/Home/Index" class="nav-item nav-link active">Trang Chủ</a>
                                <a href="/Store/Index" class="nav-item nav-link">Cửa Hàng</a>
                                <a href="/Cart/DatLich" class="nav-item nav-link">Đặt Lịch</a>
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Đơn Hàng</a>
                                    <div class="dropdown-menu rounded-0 m-0">
                                        <a href="/Accountuser/DonHangCaNhan" class="dropdown-item">Đơn Hàng Cá Nhân</a>
                                        <a href="/Accountuser/LichHen" class="dropdown-item">Lịch Hẹn</a>
                                    </div>
                                </div>

                            </div>
                            <div class="navbar-nav ml-auto py-0">
                                <a href="/Accountuser/Signin" class="nav-item nav-link">Đăng Nhập</a>
                                <a href="/Accountuser/Registers" class="nav-item nav-link">Đăng Ký</a>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>
    <div class="container-fluid bg-secondary mb-5">
        <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 150px">
            <h1 class="font-weight-semi-bold text-uppercase mb-3">Cửa Hàng Của Chúng Tôi</h1>
            <div class="d-inline-flex">
                <p class="m-0"><a href="">Trang Chủ</a></p>
                <p style="font-size:15px" class="m-0 px-2">-</p>
                <p style="font-size:15px" class="m-0">Shop</p>
            </div>
        </div>
    </div>
    <div class="container-fluid pt-5">

        <div class="row px-xl-5">
            @foreach (var SP in Model)
            {
                <div class="col-lg-4 col-md-6 col-sm-12 pb-1">

                    <div style="height: 450px;" class="card product-item border-0 mb-4">
                        <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">

                            <img src="~/asset/new/@SP.Image" width="300" class="img-fluid w-100" alt="" />
                        </div>
                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                            <h6 class="text-truncate mb-3">@SP.TenSanPham</h6>
                            <div class="d-flex justify-content-center">
                                <h6>@SP.Gia_SanPham</h6>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between bg-light border">
                            <a href="@Url.Action("Details", "Store", new { id = SP.ID_SanPham })" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>Chi Tiết</a>
                            <a href="@Url.Action("AddCart", "Cart", new { @IDSP = SP.ID_SanPham, @strURL = Request.Url.ToString() })" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Thêm Vào Giỏ Hàng</a>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
    Trang @(Model.PageCount<Model.PageNumber?0:Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))

    </div>
    <div class="container-fluid bg-secondary text-dark mt-5 pt-5">
        <div class="row px-xl-5 pt-5" style=" padding-top: 0rem !important;">
            <div class="col-lg-4 col-md-12 mb-5 pr-3 pr-xl-5">
                <a href="" class="text-decoration-none">
                    <h1 class="mb-4 display-5 font-weight-semi-bold"><img src="~/asset/new/zyro-image.png" style="width:80px;height:80px" />Gaming TTK</h1>
                </a>
                <p style="font-size:13px;">Nếu quý khách có những thắc mắc hoặc những ý kiếm thì hãy liên hệ cho shop qua...</p>
                <p style="font-size:15px;" class="mb-2"><i class="fa fa-map-marker-alt text-primary mr-3"></i>97 Bùi Đình Tuý,Q.BÌnh Thạnh, TP HCM</p>
                <p style="font-size:15px;" class="mb-2"><i class="fa fa-envelope text-primary mr-3"></i>ntthienn7890@gmail.com</p>
                <p style="font-size:15px;" class="mb-0"><i class="fa fa-phone-alt text-primary mr-3"></i>0123456789</p>
            </div>
            <div class="col-lg-8 col-md-12">
                <div class="row">
                    <div class="content-section">
                        <div style="">
                            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d244.9402724771275!2d106.7017490380287!3d10.807914525097285!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x317528bf096d5f6b%3A0x7ef6e0cfaf9e03a5!2zOTcgQsO5aSDEkMOsbmggVHXDvSwgUGjGsOG7nW5nIDI0LCBCw6xuaCBUaOG6oW5oLCBUaMOgbmggcGjhu5EgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1654793575535!5m2!1svi!2s" width="700" height="250" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="~/CSS/lib/easing/easing.min.js"></script>
    <script src="~/CSS/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/CSS/mail/jqBootstrapValidation.min.js"></script>
    <script src="~/CSS/mail/contact.js"></script>
    <script src="~/CSS/js/main.js"></script>
</body>

</html>


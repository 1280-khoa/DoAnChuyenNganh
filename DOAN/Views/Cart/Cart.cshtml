@using DOAN.Models
@model List<Cart>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <meta charset="utf-8">
    <title>EShopper - Bootstrap Shop Template</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="Free HTML Templates" name="keywords">
    <meta content="Free HTML Templates" name="description">
    <link href="img/favicon.ico" rel="icon">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="css/style.css" rel="stylesheet">
</head>
<style>
    a {
        font-size: 15px;
    }
</style>
<body>
    @Html.Partial("header")

    <div class="container-fluid">
        <div class="row border-top px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                    <h4 class="m-0">Danh Mục</h4>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 3;">
                    <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link" data-toggle="dropdown">Linh Kiện <i class="fa fa-angle-down float-right mt-1"></i></a>
                            <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                <a href="" class="dropdown-item">Core</a>
                                <a href="" class="dropdown-item">Cart Màn Hình</a>
                                <a href="" class="dropdown-item">.....</a>
                            </div>
                        </div>
                        <a href="" class="nav-item nav-link">LapTop</a>
                        <a href="" class="nav-item nav-link">Màn Hình</a>
                        <a href="/Store/CPU" class="nav-item nav-link">CPU</a>
                        <a href="" class="nav-item nav-link">Chuột</a>
                        <a href="" class="nav-item nav-link">Bàn Phím</a>
                        <a href="" class="nav-item nav-link">Tai Nghe</a>
                        <a href="" class="nav-item nav-link">WebCam</a>
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                    <a href="" class="text-decoration-none d-block d-lg-none">
                        <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                            <div class="navbar-nav mr-auto py-0">
                                <a href="/Home/Index" class="nav-item nav-link active">Trang Chủ</a>
                                <a href="/Store/Index" class="nav-item nav-link">Cửa Hàng</a>
                                <a href="/Cart/DatLich" class="nav-item nav-link">Đặt Lịch</a>
                                <div class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Đơn Hàng</a>
                                    <div class="dropdown-menu rounded-0 m-0">
                                        <a href="/Accountuser/DonHangCaNhan" class="dropdown-item">Đơn Hàng Cá Nhân</a>
                                        <a href="/Accountuser/LichHen" class="dropdown-item">Lịch Hẹn</a>
                                    </div>
                                </div>

                            </div>
                            
                        </div>
                    </div>
                </nav>
            </div>
        </div>
        <div class="container-fluid pt-5">
            <div class="row px-xl-5">
                <div class="col-lg-8 table-responsive mb-5">
                    <table class="table table-bordered text-center mb-0">
                        <thead class="bg-secondary text-dark">
                            <tr>
                                <th>Sản Phẩm</th>
                                <th>Giá Sản Phẩm</th>
                                <th>Số Lượng</th>
                                <th>Tổng Tiền</th>
                                <th>Xóa Sản Phẩm</th>
                            </tr>
                        </thead>
                        <tbody class="align-middle">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="align-middle"><img src="~/asset/new/@item.Image" alt="" style="width: 50px;"> >@item.TenSanPham</td>

                                    @using (Html.BeginForm("UpdateCart", "Cart", new { @IDSP = item.ID_SanPham }))
                                    {
                                        <td class="col-sm-1 col-md-1 text-center"><strong>@String.Format("{0:0,0}", item.dDongia)</strong></td>
                                        <td class="col-sm-1 col-md-1" style="text-align: center">
                                            <input type="number" name="quantity" min="1" max="99" value="@item.iSoluong">
                                        </td>

                                        <td class="col-sm-1 col-md-1 text-center"><strong>@String.Format("{0:0,0}", item.dThanhtien)</strong></td>
                                        <td class="col-sm-1 col-md-1">
                                            <button type="button" class="btn btn-danger">
                                                @*<span class="glyphicon glyphicon-remove"></span> Remove*@
                                                <a class="glyphicon glyphicon-remove" style="color:#fff" href="@Url.Action("DeleteCart", "Cart", new { @IDSP = item.ID_SanPham })">
                                                    Delete
                                                </a>
                                            </button>
                                        </td>
                                    }
                                </tr>
                            }

                        </tbody>
                    </table>
                    <button type="button" class="btn btn-default">
                        <span class="glyphicon glyphicon-shopping-cart"></span> <a href=@Url.Action("Index", "Store") style="color:#000;">Tiếp Tục Mua Hàng</a>
                    </button>
                </div>
                <div class="col-lg-4">

                    <div class="card border-secondary mb-5">
                        <div class="card-header bg-secondary border-0">
                            <h4 class="font-weight-semi-bold m-0">Tổng Kết Giỏ Hàng</h4>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between mb-3 pt-1">
                                <h4 class="font-weight-medium">Tổng Tiền</h4>
                                <h4 class="font-weight-medium"> @String.Format("{0:0,0}", ViewBag.TongTien) VNĐ</h4>
                            </div>

                        </div>
                        <div class="card-footer border-secondary bg-transparent">
                            <div class="d-flex justify-content-between mt-2">
                                <h5 class="font-weight-bold">Tổng Tiền Cần Thanh Toán :</h5>
                                <h5 class="font-weight-bold">@String.Format("{0:0,0}", ViewBag.TongTien)</h5>
                            </div>

                            <button style="border-radius: 30px; type="button" class="btn btn-block btn-primary my-3 py-3">
                                <a href="@Url.Action("Oder", "Cart")" style=" text-decoration: none;color: #fff; font-size: 15px; ">Đặt Hàng</a> <span style="color:#fff" class="glyphicon glyphicon-shopping-cart"></span>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>


    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js"></script>
    <script src="lib/easing/easing.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>

    <!-- Contact Javascript File -->
    <script src="mail/jqBootstrapValidation.min.js"></script>
    <script src="mail/contact.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>


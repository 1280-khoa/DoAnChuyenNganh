
@{
    ViewBag.Title = "Signin";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/CSS/StyleSheet1.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <h4 style="color:red; text-align:center;">@ViewBag.Thongbao</h4>
    <div class="container" style="padding-right:50px;">
        <div class="row">
            <div style="left:350px; " class="offset-md-2 col-lg-5 col-md-7 offset-lg-4 offset-md-3">
                <div class="panel border bg-white">
                    <div class="panel-heading">
                        <h3 class="pt-3 font-weight-bold">Đăng Nhập</h3>
                    </div>

                    <div class="panel-body p-3">
                        <form action="login_script.php" method="POST">
                            <div class="form-group py-2">
                                <div class="input-field">
                                    <span class="far fa-user p-2"></span>
                                    <input type="text" name="Account_KH" placeholder="Nhập Email Của Bạn...">


                                    @ViewData["Lôi1"]
                                </div>
                            </div>
                            <div class="form-group py-1 pb-2">
                                <div class="input-field">
                                    <span class="fas fa-lock px-2"></span>
                                    <input type="password" name="Password_KH" placeholder="Nhập Nhập Khẩu Của Bạn...">
                                    @ViewData["Lôi2"]
                                </div>
                                <span class="far fa-eye-slash"></span>
                            </div>
                            <div class="form-inline">
                                <input type="checkbox" name="remember" id="remember"> <label for="remember" class="text-muted">Ghi Nhớ Tài Khoản</label> |
                                <a href="#" id="forgot" class="font-weight-bold">Quên Mật Khẩu?</a>
                            </div>
                            @*<div class="btn btn-primary btn-block mt-3">Sign In</div>*@
                            <div class="btn-box">

                                <button type="submit" class="btn btn-primary btn-block mt-3">
                                    Đăng Nhập
                                </button>

                            </div>
                            <div class="text-center pt-4 text-muted">Tôi chưa có tài khoản? <a href="/Accountuser/Registers">Đăng Ký</a> | <a class="text-out" href="/Home">Thoát</a></div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
  